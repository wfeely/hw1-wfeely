<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<name>Homework 1 Type System</name>
	<description>Type system for Software Engineering Homework 1.</description>
	<version>1.0</version>
	<vendor>Weston Feely</vendor>
  <types>
		<typeDescription>
			<name>edu.cmu.cs.wfeely.hw1.BaseAnnotation</name>
			<description/>
			<supertypeName>uima.tcas.Annotation</supertypeName>
			<features>
				<featureDescription>
					<name>source</name>
					<description>String feature source.</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
			<featureDescription>
          <name>confidence</name>
          <description>Numeric feature confidence.</description>
          <rangeTypeName>uima.cas.Double</rangeTypeName>
        </featureDescription>
      </features>
		</typeDescription>
	<typeDescription>
      <name>edu.cmu.cs.wfeely.hw1.Question</name>
      <description>Question type.</description>
      <supertypeName>edu.cmu.cs.wfeely.hw1.BaseAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>qstring</name>
          <description>String for question text.</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>tokens</name>
          <description>Array of strings for tokens from question string.</description>
          <rangeTypeName>uima.cas.StringArray</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>qgrams</name>
          <description>Question ngrams.</description>
          <rangeTypeName>edu.cmu.cs.wfeely.hw1.Ngram</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>edu.cmu.cs.wfeely.hw1.Answer</name>
      <description>Answer Type.</description>
      <supertypeName>edu.cmu.cs.wfeely.hw1.BaseAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>astring</name>
          <description>String for answer text.</description>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>tokens</name>
          <description>Array of strings for tokens from answer string.</description>
          <rangeTypeName>uima.cas.StringArray</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>gold</name>
          <description>Boolean gold standard (0 for not-an-answer, 1 for good-answer).</description>
          <rangeTypeName>uima.cas.Boolean</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>guess</name>
          <description>Boolean guess (0 for not-an-answer, 1 for good-answer).</description>
          <rangeTypeName>uima.cas.Boolean</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>agrams</name>
          <description>Answer ngrams.</description>
          <rangeTypeName>edu.cmu.cs.wfeely.hw1.Ngram</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>edu.cmu.cs.wfeely.hw1.Ngram</name>
      <description>Ngram type for ngrams.</description>
      <supertypeName>edu.cmu.cs.wfeely.hw1.BaseAnnotation</supertypeName>
      <features>
        <featureDescription>
          <name>unigrams</name>
          <description>Array of unigram strings (single token words).</description>
          <rangeTypeName>uima.cas.StringArray</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>bigrams</name>
          <description>Array of bigram strings (2-token pairs).</description>
          <rangeTypeName>uima.cas.StringArray</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>trigrams</name>
          <description>Array of trigram strings (3-token triples).</description>
          <rangeTypeName>uima.cas.StringArray</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
  </types>
</typeSystemDescription>
